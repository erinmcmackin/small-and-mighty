<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <header>
      <h1>New User</h1>
    </header>
    <form class="new-form" action="/users" method="POST">
      <!-- name input -->
      <label for="name">Name</label>
      <input type="text" name="name" />
      <!-- password input -->
      <label for="password">Password</label>
      <input type="password" name="password" />
      <!-- articles input, hidden for new user -->
      <input type="hidden" name="articles" />
      <!-- admim input, hidden for regular users -->
      <input type="hidden" name="admin" />
      <!-- submit -->
      <input type="submit" value="Register" />
    </form>
  </body>
</html>
